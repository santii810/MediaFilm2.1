<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MediaFilm2._1.Diccionarios">


    <Style x:Key="LabelMenu" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Tempus Sans ITC"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="ImageMenu" TargetType="{x:Type Image}">
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Margin" Value="0,11,0,0"/>

    </Style>

</ResourceDictionary>