<Page x:Class="MediaFilm2._1.Vista.GestionarDatosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaFilm2._1.Vista"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GestionarDatosPage" Background="White"  Height="737" Width="860" Style="{StaticResource PaginaPrincipal}"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="537"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="215"/>
        </Grid.ColumnDefinitions>


        <StackPanel Orientation="Vertical"  Margin="20,0" Grid.Column="0" Grid.Row="0">
            <Label Content="{StaticResource strAddSerie}"  Style="{StaticResource LabelMenuSecundario}"/>
            <Image Source="..\Res\Iconos\film.png"  Style="{StaticResource ImageMenuSecundario}" MouseLeftButtonUp="ImageAddSerie_MouseLeftButtonUp"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="20,0" Grid.Column="1" Grid.Row="0">
            <Label Content="{StaticResource strAddPatron}"  Style="{StaticResource LabelMenuSecundario}"/>
            <Image Source="..\Res\Iconos\patron.png"   Style="{StaticResource ImageMenuSecundario}" MouseLeftButtonUp="ImageAddPatron_MouseLeftButtonUp"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="20,0" Grid.Column="2" Grid.Row="0">
            <Label Content="{StaticResource strIOSerie}"  Style="{StaticResource LabelMenuSecundario}"/>
            <Image Source="..\Res\Iconos\IO.png"  Style="{StaticResource ImageMenuSecundario}" MouseLeftButtonUp="ImageIOSerie_MouseLeftButtonUp"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="20,0" Grid.Column="3" Grid.Row="0">
            <Label Content="{StaticResource strModTemporadas}"  Style="{StaticResource LabelMenuSecundario}"/>
            <Image Source="..\Res\Iconos\abaco.png"  Style="{StaticResource ImageMenuSecundario}" MouseLeftButtonUp="ImageIncTemp_MouseLeftButtonUp"/>
        </StackPanel>

        <StackPanel Name="panelAddSerie" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Style="{StaticResource StackPanelAddSerie}" Margin="50" VerticalAlignment="Center" Visibility="Visible">
            <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelListas}">
                <Label Content="{StaticResource strTitulo}" Width="100" Style="{StaticResource LabelListas}"/>
                <TextBox Name="textBoxTitulo" Width="200" Style="{StaticResource TextBox}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelListas}">
                <Label Content="{StaticResource strTemporadas}" Width="100" Style="{StaticResource LabelListas}"/>
                <TextBox Name="textBoxNumeroTemporadas" Width="200" Style="{StaticResource TextBox}" KeyDown="textBoxNumeroTemporadas_KeyDown"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelListas}">
                <Label Content="{StaticResource strCapitulos}" Width="100" Style="{StaticResource LabelListas}"/>
                <TextBox Name="textBoxCapitulosTemporada" Width="200" KeyDown="textBoxCapitulosTemporada_KeyDown" Style="{StaticResource TextBox}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelListas}">
                <Label Content="{StaticResource strExtension}" Width="100" Style="{StaticResource LabelListas}"/>
                <ComboBox Name="comboBoxExtensionSerie" Text="Extension" Width="200" Style="{StaticResource ComboBoxFlatStyle}">
                    <ComboBoxItem Name="mkv" Content=".mkv"/>
                    <ComboBoxItem Name="avi" Content=".avi"/>
                    <ComboBoxItem Name="mp4" Content=".mp4"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Añadir" Width="100" Height="25" Style="{StaticResource Button}" Click="ButtonAñadirSerie_Click"/>
        </StackPanel>



    </Grid>
</Page>
