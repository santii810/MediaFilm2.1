<Page x:Class="MediaFilm2._1.Vista.OrdenarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaFilm2._1.Vista"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OrdenarPage" Background="White" Height="737" Width="860" Style="{StaticResource PaginaPrincipal}">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Label Content="{StaticResource strRecogerVideos}" Style="{StaticResource LabelMenuSecundario}"/>
                    <Image  Source="../Res/Iconos/recorrerTorrent.png" Style="{StaticResource ImageMenuSecundario}" MouseLeftButtonUp="ImageRecogerVideos_MouseLeftButtonUp"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="{StaticResource strRenombrarVideos}" Style="{StaticResource LabelMenuSecundario }"/>
                    <Image  Source="../Res/Iconos/ordenarVideos.png" Style="{StaticResource ImageMenuSecundario}"/>
                </StackPanel>

            </StackPanel>
            <StackPanel Name="PanelResultadoRecogerVideos" Orientation="Horizontal" Height="550">
            <Border Style="{StaticResource BorderBisque}">
                <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <Label Content="{StaticResource strVideosMovidos}" Style="{StaticResource LabelMenuSecundario}"/>
                    <Label Content=" "/>
                </StackPanel>
                <ScrollViewer>
                    <StackPanel Name="PanelResultadoFicherosMovidos"/>
                </ScrollViewer>
                </StackPanel>
            </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
